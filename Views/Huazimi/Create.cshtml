@model Libraryms.Models.Huazimi;



@{
    ViewData["Title"] = "Create";
}

<h2 style="color:white;">Huazo</h2>


<div class="modal-dialog">
    <div class="modal-content">
        <form class="form" asp-action="Create" method="post">
            <div class="modal-header">
                <h4 class="modal-title">Huazo</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="window.location='/Huazimi';">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Klienti:</label>
                    <select asp-for="Klienti_id" class="form-control" asp-items="@(new SelectList(ViewBag.klientetid,"id","id"))">
                    </select>
                </div>
                <div class="form-group">
                    <label>Libra:</label>
                    <select asp-for="Libra_id" class="form-control" asp-items="@(new SelectList(ViewBag.libraid,"id","id"))">
                    </select>
                </div>
            </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-dark" value="Anulo" onclick="window.location='/Huazimi';">
                    <input type="submit" value="Huazo" class="btn btn-primary" float-right">
                </div>
                
              
            </form>
</div>
</div>