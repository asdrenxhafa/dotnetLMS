@model Rezervimi

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label>Klienti:</label>
        <input type="number" asp-for="Klienti_id" /> <br>
        <span asp-validation-for="Klienti_id"></span>
    </div>
    <div class="form-group">
        <label>Libra:</label>
        <input type="number" asp-for="Libra_id" />
        <span asp-validation-for="Libra_id"></span>
    </div>
    <div class="form-group">
        <label>Aktiv:</label>
        <input type="checkbox" asp-for="Aktiv" />
    </div>
    <input class="btn btn-primary" type="submit" value="Submit" />
</form>