@model Klienti

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:white;">Create</h1>


<div class="modal-dialog">
    <div class="modal-content">
        <form class="form" asp-action="Create" method="post">
            <div class="modal-header">
                <h4 class="modal-title">Shto Klient</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="window.location='/klienti';">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Emri:</label>
                    <input name="Emri" id="Emri" type="text" class="form-control" value="" required>
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input name="Email" id="Email" type="email" class="form-control" value="" required>
                </div>
                <div class="form-group">
                    <label>Tel:</label>
                    <input name="NumriTel" id="NumriTel" type="text" class="form-control" value="" required>
                </div>
                <div class="form-group">
                    <label>Aktiv:</label>
                    <input type="checkbox" asp-for="Aktiv" />
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-dark" value="Anulo" onclick="window.location='/libra';">
                <input type="submit" value="Create" class="btn btn-primary float-right">
            </div>
        </form>
    </div>
</div>
