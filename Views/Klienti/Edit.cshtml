@model Klienti

@{
    ViewData["Title"] = "Edit";
}


<h2 style="color:white;">Edit</h2>

<div class="modal-dialog">
    <div class="modal-content">
        <form class="form" asp-action="Edit" method="post">
            <div class="modal-header">
                <h4 class="modal-title">Edito Klientin</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="window.location='/klienti';">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Emri:</label>
                    <input type="text" class="form-control" asp-for="Emri" />
                    <span asp-validation-for="Emri"></span>
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" class="form-control" asp-for="Email" />
                </div>
                <div class="form-group">
                    <label>Tel:</label>
                    <input type="text" class="form-control" asp-for="NumriTel" />
                </div>
                <div class="form-group">
                    <label>Aktiv:</label>
                    <input type="checkbox" asp-for="Aktiv" />
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-dark" value="Anulo" onclick="window.location='/klienti';">
                <input type="submit" value="Edito" class="btn btn-primary float-right">
            </div>
        </form>
    </div>
</div>