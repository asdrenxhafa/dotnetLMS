@model Libraryms.Models.Klienti

@{
    ViewData["Title"] = "Delete";
}



<h1 style="color:white;">Are you sure you want to delete this?</h1>
<div>
    <h4 style="color:white;">Klienti</h4>
    <hr />
    <dl class="dl-horizontal" style="color:white;">
        <dt>
            <h5>Emri: @Html.DisplayFor(model => model.Emri)</h5>
        </dt>
        <dd>
            <h5>Email: @Html.DisplayFor(model => model.Email)</h5>
        </dd>
        <dt>
            <h5>Tel: @Html.DisplayFor(model => model.NumriTel)</h5>
        </dt>
        <dd>
            <h5>Aktiv:  @Html.DisplayFor(model => model.Aktiv)</h5>
        </dd>
        <dt>
            <h5>Created-at: @Html.DisplayFor(model => model.created_at)</h5>
        </dt>
       
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">
            <input type="button" value="Back to List" class="btn btn-dark" />
        </a>
    </form>
</div>
