@model Pagesa;

@{
    ViewData["Title"] = "Edit";
}

<h2 style="color:white;">Edit</h2>

<div class="modal-dialog">
    <div class="modal-content">
        <form class="form" asp-action="Edit" method="post">
            <div class="modal-header">
                <h4 class="modal-title">Edito Pagesat</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="window.location='/pagesa';">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Shuma:</label>
                    <select asp-for="@Model.Shuma" class="form-control" asp-items="ViewBag.shuma">
                    </select>
                </div>
                <div class="form-group">
                    <label>Klienti:</label>
                    <input type="text" class="form-control" asp-for="Klienti_id" />
                </div>
                <div class="form-group">
                    <label>Aktiv:</label>
                    <input type="checkbox" asp-for="Active" />
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-dark" value="Anulo" onclick="window.location='/pagesa';">
                <input type="submit" value="Edito" class="btn btn-primary" float-right">
            </div>
        </form>
    </div>
</div>
