@model Libra

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label>Titulli:</label>
        <input type="text" asp-for="Titulli" /> <br>
        <span asp-validation-for="Titulli"></span>
    </div>
    <div class="form-group">
        <label>Autori:</label>
        <input type="text" asp-for="Autori" />
    </div>
    <div class="form-group">
        <label>E lire:</label>
        <input type="checkbox" asp-for="E_Lire" />
    </div>
    <input class="btn btn-primary" type="submit" value="Submit" />
</form>

