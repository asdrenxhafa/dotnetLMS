@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>;



@{
    ViewData["Title"] = "Index";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Perdoruesit</h1>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>UserName</th>
                    <th>Email</th>

                </tr>
            </thead>
            <tfoot>

                <tr>
                    <th>ID</th>
                    <th>UserName</th>
                    <th>Email</th>
                </tr>

            </tfoot>

            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => s.Id)</td>
                        <td>@Html.DisplayFor(model => s.UserName)</td>
                        <td>@Html.DisplayFor(model => s.Email)</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
